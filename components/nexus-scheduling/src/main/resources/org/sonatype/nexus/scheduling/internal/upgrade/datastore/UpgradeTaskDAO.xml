<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sonatype.nexus.scheduling.internal.upgrade.datastore.UpgradeTaskDAO">

  <insert id="createSchema">
    CREATE TABLE IF NOT EXISTS upgrade_tasks (
      id           INT GENERATED BY DEFAULT AS IDENTITY,
      task_id      varchar NOT NULL,
      configuration   ${JSON_TYPE} NOT NULL,
      status       varchar DEFAULT NULL,
      created      TIMESTAMP WITH TIME ZONE NOT NULL DEFAULT CURRENT_TIMESTAMP,
      last_updated TIMESTAMP WITH TIME ZONE NOT NULL DEFAULT CURRENT_TIMESTAMP
    );
  </insert>

  <resultMap id="upgradeTaskResult" type="UpgradeTaskData">
    <result property="id" column="id"/>
    <result property="taskId" column="task_id" />
    <result property="configuration" column="configuration" />
    <result property="status" column="status" />
  </resultMap>

  <select id="browse" resultMap="upgradeTaskResult">
    SELECT *
      FROM upgrade_tasks
     ORDER BY id ASC;
  </select>

  <insert id="create" parameterType="UpgradeTaskData">
    INSERT INTO upgrade_tasks (task_id, configuration)
    VALUES (#{taskId}, #{configuration});
  </insert>

  <select id="read" resultMap="upgradeTaskResult">
    SELECT *
      FROM upgrade_tasks
     WHERE id = #{value};
  </select>

  <select id="next" resultMap="upgradeTaskResult">
    SELECT *
      FROM upgrade_tasks
     ORDER BY id ASC
     LIMIT 1;
  </select>

  <update id="update" parameterType="UpgradeTaskData">
    UPDATE upgrade_tasks 
       SET task_id = #{taskId},
           configuration = #{configuration},
           last_updated = CURRENT_TIMESTAMP
     WHERE id = #{id};
  </update>
  
  <update id="setStatus">
    UPDATE upgrade_tasks 
       SET status = #{status},
           last_updated = CURRENT_TIMESTAMP
     WHERE task_id = #{taskId};
  </update>

  <delete id="delete">
    DELETE FROM upgrade_tasks
     WHERE id = #{value};
  </delete>

  <delete id="deleteByTaskId">
    DELETE FROM upgrade_tasks
     WHERE task_id = #{value};
  </delete>

</mapper>
